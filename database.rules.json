{
  "rules": {
    "players": {
    	".read": "auth != null",
      ".write": false
    },
    "matches": {
    	".read": "auth != null",
      ".write": false
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        "matches": {
          ".write": "$uid === auth.uid",
          "$match" : {
            "player1Accepted" : {
              ".write": "$uid === data.parent().child('player1Uid').val()"
            },
            "player2Accepted" : {
              ".write": "$uid === data.parent().child('player2Uid').val()"
            },
            "player1Score" : {
              ".write": "$uid === auth.uid"
            },
            "player2Score" : {
              ".write": "$uid === auth.uid"
            }
          }
        }
      }
    }
  }
}
